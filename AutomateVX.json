{
  "about": {
    "name": "Crestron AutomateVX Control",
    "version": "0.0.5",
    "author": "Mia Hanson"
  },
  "adapters": [
    {
      "model": "GenericNetworkAdapter",
      "ip": "tcp://[AutomateIP]:4443",
      "ports": [
        {
          "id": "automate-vx",
          "name": "Automate VX",
          "methods": [
            {
              "id": "autoswitch",
              "name": "AutoSwitch",
              "command": "POST /api/%AutoSwitch HTTP/1.1\r\nAuthorization: [AuthKey]\r\nHost: [AutomateIP]:4443\r\nContent-Length: 0\r\n\r\n",
              "params": [
                {
                  "id": "start-autoswitch",
                  "name": "Start AutoSwitch",
                  "value": "Start"
                },
                {
                  "id": "stop-autoswitch",
                  "name": "Stop AutoSwitch",
                  "value": "Stop"
                }
              ],
              "type": "actions"
            },
            {
              "id": "layouts",
              "name": "Layouts",
              "command": "POST /api/ChangeLayout HTTP/1.1\r\nAuthorization: [AuthKey]\r\nHost: [AutomateIP]:4443\r\nContent-Length: 10\r\n\r\n{\"id\":\"%\"}",
              "params": [
                {
                  "id": "layout-a",
                  "name": "[ZoomDisplayName]",
                  "value": "a"
                },
                {
                  "id": "layout-b",
                  "name": "[ZoomDisplayName]",
                  "value": "b"
                },
                {
                  "id": "layout-c",
                  "name": "[ZoomDisplayName]",
                  "value": "c"
                },
                {
                  "id": "layout-d",
                  "name": "[ZoomDisplayName]",
                  "value": "d"
                }
              ],
              "type": "actions"
            },
            {
              "id": "room_configs",
              "name": "Room Configs",
              "command": "POST /api/ChangeRoomConfiguration HTTP/1.1\r\nAuthorization: [AuthKey]\r\nHost: [AutomateIP]:4443\r\nContent-Length: 10\r\n\r\n{\"id\":\"%\"}",
              "params": [
                {
                  "id": "rc-1",
                  "name": "[Config1Name]",
                  "value": "1"
                },
                {
                  "id": "rc-2",
                  "name": "[Config2Name]",
                  "value": "2"
                },
                {
                  "id": "rc-3",
                  "name": "[Config3Name]",
                  "value": "3"
                }
              ],
              "type": "actions"
            }
          ]
        }
      ]
    }
  ],
  "styles": [
    "automate-vx.main_method=autoswitch",
    "automate-vx.icon=icon_rack_equipment"
  ]
}